@model PortableFitnessApp.DTO.UserRegisterDto
@{
	ViewData["Title"] = "Регистрация";
}

<!DOCTYPE html>
<html lang="ru">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/register.css">
</head>
<body>
	<div class="registration-container">
		<h2>Регистрация пользователя</h2>
		<form id="registration-form" method="post" action="/User/Register" asp-antiforgery="true">
			<!-- Имя пользователя -->
			<div class="form-group">
				<label for="Email">Email</label>
				<input type="text" id="Email" name="Email" required>
				<span class="text-danger" asp-validation-for="Email"></span>
			</div>
			<div class="form-group">
				<label for="Name">Имя пользователя</label>
				<input type="text" id="Name" name="Name" required>
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			<!-- Пароль -->
			<div class="form-group">
				<label for="Password">Пароль:</label>
				<input type="password" id="Password" name="Password" required>
				<span class="text-danger" asp-validation-for="Password"></span>
			</div>
			<!-- Пол -->
			<div class="form-group">
				<label for="Gender">Пол:</label>
				<select id="Gender" name="Gender" required>
					<option value="0">Мужской</option>
					<option value="1">Женский</option>
				</select>
				<span class="text-danger" asp-validation-for="Gender"></span>
			</div>
			<!-- Дата рождения -->
			<div class="form-group">
				<label for="BirthDate">Дата рождения:</label>
				<input type="date" id="BirthDate" name="BirthDate" required>
				<span class="text-danger" asp-validation-for="BirthDate"></span>
			</div>
			<!-- Вес -->
			<div class="form-group">
				<label for="Weight">Вес (кг):</label>
				<input type="number" id="Weight" name="Weight" min="4" max="500" required>
				<span class="text-danger" asp-validation-for="Weight"></span>
			</div>
			<!-- Рост -->
			<div class="form-group">
				<label for="Height">Рост (см):</label>
				<input type="number" id="Height" name="Height" min="11" max="500" required>
				<span class="text-danger" asp-validation-for="Height"></span>
			</div>
			<!-- Уровень активности -->
			<div class="form-group">
				<label for="ActivityLevel">Уровень активности:</label>
				<input type="range" id="ActivityLevel" name="ActivityLevel" min="0" max="3" step="1" value="0">
				<p id="activity-level-description">Не активен</p>
				<span class="text-danger" asp-validation-for="ActivityLevel"></span>
			</div>
			<!-- Кнопка отправки формы -->
			<div class="form-group">
				<button type="submit">Зарегистрироваться</button>
			</div>
		</form>
	</div>
	@* Подключаем валидацию на стороне клиента *@
	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
		<script src="~/js/register.js"></script>
	}
</body>
</html>